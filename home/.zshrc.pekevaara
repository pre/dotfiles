kconf() {
  local file='kubeconfig'

  if [ "$1" != "" ]; then file="$1"; fi

  local kubeconfig; kubeconfig="$(pwd)/${file}"

  if [ ! -f "${kubeconfig}" ]; then
    echo "File does not exist: ${kubeconfig}";
    return 1
  fi

  export KUBECONFIG=${kubeconfig}
  echo "KUBECONFIG=${KUBECONFIG}"
}

