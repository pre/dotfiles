local-fwd() {
  local from; from=$1
  local to; to=$2

  if [[ -z "${from}" ]] || [[ -z "${to}" ]]; then
    echo "Usage: $0 fromPort toPort"
    return
  fi

  command socat "tcp-l:${from},fork,reuseaddr" "tcp:127.0.0.1:${to}"
}

