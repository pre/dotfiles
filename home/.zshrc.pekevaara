# List directories in either current or given directory
lsd() {
  local dest; dest="${1:-}"

  if [[ -z "${dest:-}" ]]; then
    command ls -ld *(-/DN)
  else
    command ls -ld ${dest}/*(-/DN)
  fi
}

# List hidden filenames which start with a dot in current or given directory
unalias lsa
lsa() {
  local dest; dest="${1:-}"

  if [[ -z "${dest:-}" ]]; then
    command ls -ld .*
  else
    command ls -ld ${dest}/.*
  fi
}

